; Arsalan Kazmi's polybar config

[colours]
background = #16161a
foreground = #ffffff
highlight = #5534b7
error = #dd0000

[bar/that1m8bar]
width = 100%
height = 35
radius = 0.0
fixed-center = false

background = ${colours.background}
foreground = ${colours.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0 
padding-right = 1

module-margin-left = 1 
module-margin-right = 1

font-0 = Cascadia Code PL:size=10;1
font-1 = Font Awesome 5 Free:size=10;1

modules-left = i3
modules-center = xwindow
modules-right = filesystem memory cpu wlan eth battery date powermenu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 70
label-empty = i3-gaps

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = Disk: %percentage_used%%
label-mounted-underline = ${colours.highlight}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 0 
label-mode-foreground = #000
label-mode-background = ${colours.highlight}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colours.highlight}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-underline = ${colours.highlight}
label-unfocused-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colours.error}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = internal/cpu
interval = 2
label = CPU usage: %percentage:2%%
label-underline = ${colours.highlight}

[module/memory]
type = internal/memory
interval = 2
label = Memory: %percentage_used%%
label-underline = ${colours.highlight}

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected-underline = ${colours.highlight}
format-disconnected-underline = ${colours.error}

format-connected = <label-connected>
label-connected = Connected to %essid%

format-disconnected = No wireless

[module/eth]
type = internal/network
interface = enp5s0
interval = 3.0
format-connected-underline = ${colours.highlight}
format-disconnected-underline = ${colours.error}

label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colours.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = %d/%m/%Y
time = %l:%M %p

label = %date% %time%
label-underline = ${colours.highlight}


[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
